{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "awesomeTypescriptLoaderOptions": {
    "configFileName": "tsconfig-aot.json",
    "useBabel": true,
    "useCache": true
  },
  "exclude": [
    "node_modules/*",
    "aot/*",
    "**/*-aot.ts"
  ]
}
